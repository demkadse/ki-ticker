<article class="card">

  {# ------------------------------------------------------------
     Artikelbild (falls vorhanden)
  ------------------------------------------------------------ #}
  {% if item.image %}
  {{ item.url }}
    <img
      src="{{ item.image }}"
      loading="lazy"
     --------------------------------------------
     Titel
  ------------------------------------------------------------ #}
  <h3>
    {{ item.url }}
      {{ item.title }}
    </a>
  </h3>

  {# ------------------------------------------------------------
     Metadaten
  ------------------------------------------------------------ #}
  <div class="meta">
    {{ item.source }} • {{ item.domain }} •
    {{ item.published.strftime("%d.%m.%Y %H:%M") }} UTC
  </div>

  {# ------------------------------------------------------------
     Summary / Beschreibung
  ------------------------------------------------------------ #}
  {% if item.summary %}
  <p>{{ item.summary }}</p>
  {% endif %}

</article>
